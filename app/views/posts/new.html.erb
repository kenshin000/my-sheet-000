<%= render "shared/header" %>

    <%= form_with(model: [@language, @post], local: true) do |f| %>
  <div class="mb-3">
  <p for="exampleFormControlInput1" class="form-label title_label">タイトル</p>
  </div>
  <%= f.text_area :title,  class:"form-control", id:"post_title", placeholder:"" %>
<div class="mb-3">
  <p for="exampleFormControlTextarea1" class="form-label title_label">本文</p>
</div>
    <%= f.text_area :text, class:"form-control sheet_text", id:"post_text", placeholder:"" %>
<div class="d-grid gap-2 col-6 mx-auto">
<%= f.submit "投稿",class:"btn btn-outline-info" %>
</div>
    <% end %> 

<%= render "shared/footer" %>