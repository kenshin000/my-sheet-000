<%= render "shared/header" %>

<div class="post_body album py-5 bg-light">
  <div class= "post_main">
    <div class="mb-3">
  <p for="exampleFormControlInput1" class="form-label title_label">タイトル</p>
  <p for="exampleFormControlInput1" class="post_title title_label"><%=safe_join(@post.title.split("\n"),tag(:br))%></p>
  </div>

<div class="mb-3">
  <p for="exampleFormControlTextarea1" class="form-label title_label">本文</p>
